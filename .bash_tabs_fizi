#!/bin/bash
#
# Open new Terminal tabs for FiZi Workplace

function fizi-startup () {
    osascript &>/dev/null <<EOF
        tell application "iTerm"
            activate
            set fiZiWindow to (create window with default profile)
            tell current window
                tell current session
                    set name to "FiZi API (process)"
                    write text "cd ~/dev/work/mm/finderzimmer/api"
                    write text "run"
                    set fiZiApiDirTab to (split horizontally with same profile)
                end tell
                tell fiZiApiDirTab
                    set name to "FiZi API"
                    write text "cd ~/dev/work/mm/finderzimmer/api"
                end tell
                set fiZiWebviewsProcessTab to (create tab with default profile)
                tell current session
                    set name to "FiZi Webviews (process)"
                    write text "cd ~/dev/work/mm/finderzimmer/webviews"
                    write text "middleman"
                    set fiZiWebviewsDirTab to (split horizontally with same profile)
                end tell
                tell fiZiWebviewsDirTab
                    set name to "FiZi Webviews"
                    write text "cd ~/dev/work/mm/finderzimmer/webviews"
                end tell
                set fiZiiOSTab to (create tab with default profile)
                tell current session
                    set name to "FiZi iOS"
                    write text "cd ~/dev/work/mm/finderzimmer/ios"
                end tell
            end tell
        end tell
EOF
}
