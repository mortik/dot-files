server {
  listen 80;
  server_name {{ domain }};
  root {{ path }};

  location / {
    try_files $uri @proxy;
  }

  location @proxy {
    include proxy_params_http;
    proxy_pass http://127.0.0.1:{{ port }};
  }

  location /cable {
    include proxy_params_http;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection Upgrade;
    proxy_pass http://127.0.0.1:{{ port }}/cable;
  }
}
