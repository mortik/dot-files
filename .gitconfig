[user]
	name = Marten Klitzke
	email = m.klitzke@gmail.com
[color]
	ui = auto

[alias]
  aa = add --all
  ci = commit -a
  co = checkout
  st = status -s
  br = branch
  hist = log --pretty=format:'* %h - %s (%ar) <%an>'
  l = log --abbrev-commit --date=relative
  head = !git l -1
  h = !git head
  amend = commit -a --amend
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  standup-me = log --since '2 days ago' --author m.klitzke@gmail.com
  cr = log --since '1 week ago' --author m.klitzke@gmail.com
  standup = log --since '2 days ago'
  dt = difftool
  mt = mergetool
[format]
  pretty=format:* %C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[branch "master"]
  remote = origin
  merge = refs/heads/master
[branch "develop"]
  remote = origin
  merge = refs/heads/develop
[core]
	excludesfile = /Users/mortik/.gitignore_global
[commit]
  template = /Users/mortik/.gitmessage.txt
[push]
	default = current
[merge]
	tool = opendiff
[diff]
	tool = opendiff
